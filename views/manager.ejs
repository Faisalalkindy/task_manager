<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Welcome, <%= user.name %> (Manager)</h1>
  <h2>Tasks</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Assigned To</th>
        <th>Priority</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% tasks.forEach(task => { %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.assignedTo.name %></td>
        <td><%= task.priority %></td>
        <td>
          <form action="/tasks/manager/edit/<%= task._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-warning">Edit</button>
          </form>
          <form action="/tasks/manager/priority/<%= task._id %>" method="POST" style="display:inline;">
            <input type="text" name="priority" placeholder="Priority" required>
            <button type="submit" class="btn btn-info">Set Priority</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <h2>Add Task</h2>
  <form action="/tasks/manager/add" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title" required>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" id="description" name="description" required></textarea>
    </div>
    <div class="form-group">
      <label for="assignedTo">Assign To</label>
      <select class="form-control" id="assignedTo" name="assignedTo" required>
        <% employees.forEach(employee => { %>
        <option value="<%= employee._id %>"><%= employee.name %></option>
        <% }); %>
      </select>
    </div>
    <div class="form-group">
      <label for="priority">Priority</label>
      <input type="text" class="form-control" id="priority" name="priority" required>
    </div>
    <button type="submit" class="btn btn-primary">Add Task</button>
  </form>
  <h2>Completed Tasks</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Assigned To</th>
        <th>Priority</th>
      </tr>
    </thead>
    <tbody>
      <% completedTasks.forEach(task => { %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.assignedTo.name %></td>
        <td><%= task.priority %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
<%- include('partials/footer') %>
